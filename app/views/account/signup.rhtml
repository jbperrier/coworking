<%= error_messages_for :user %>
<% form_for :user do |f| -%>
<h3>Login</h3>
<%= f.text_field :login %>

<h3>Email</h3>
<%= f.text_field :email %>

<h3>Password</h3>
<%= f.password_field :password %>

<h3>Confirm Password</h3>
<%= f.password_field :password_confirmation %>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>
